{
    "prettier.arrowParens": "avoid",
    "prettier.singleQuote": true,
    "prettier.semi": false,
    "prettier.configPath": "my-app/.prettierrc",
    "javascript.format.enable": true,

    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "[javascript]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
  
    "editor.codeActionsOnSave": {
      "source.fixAll": true
    }
  
}